@using Microsoft.AspNetCore.Mvc.ModelBinding
@model RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Регистрация</title>
    <link rel="stylesheet" href="~/css/Register.css" />
</head>
<body>
    <div class="container">
        <a style="text-decoration:none;" asp-controller="Main" asp-action="Main"><h1 class="container__title">Путеводитель</h1></a>

        <form class="reg" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div asp-validation-summary="ModelOnly"></div>
            <h2 class="container__title">Регистрация</h2>
            <div class="reg__setting">
                <div class="reg__inner textbox" data-index="0"
                @if(Model.RegisterState["LastName"]?.ValidationState == ModelValidationState.Invalid){<text>style="color:red;"</text>}>
                
                    <label class="form__lab" asp-for="LastName">Фамилия</label><br />
                    <input class="form__field" type="text" asp-for="LastName" />
                    <span asp-validation-for="LastName" />
                </div>
                <div class="reg__inner textbox" data-index="1">
                    <label class="form__lab" asp-for="Name">Имя</label><br />
                    <input class="form__field" type="text" asp-for="Name" />
                    <span asp-validation-for="Name" />
                </div>
                <div class="reg__inner textbox" data-index="2">
                    <label class="form__lab" asp-for="Email">Email</label><br />
                    <input class="form__field" type="text" asp-for="Email" readonly
                           onfocus="this.removeAttribute('readonly')" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="reg__inner textbox" data-index="3">
                    <label class="form__lab" asp-for="Password">Пароль</label><br />
                    <input class="form__field" asp-for="Password" readonly
                           onfocus="this.removeAttribute('readonly')" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="reg__inner textbox" data-index="4">
                    <label class="form__lab" asp-for="ConfirmPassword">Повторите пароль</label><br />
                    <input class="form__field" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div>
                    <input class="reg__btn" type="submit" value="Регистрация" />
                </div>
            </div>
        </form> 
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script><!--подключение jquery-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/Reg.js"></script>
</body>
</html>
