<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width"></meta>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelGuide</title>
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="header__inner">
                <a asp-controller="Main" asp-action="Main" class="header__logo">Путеводитель</a>
                <nav class="nav">
                    <a class="nav__link" asp-controller="Place" asp-action="ListPlaces" asp-route-type="hotel">Отели</a>
                    <a class="nav__link" asp-controller="Place" asp-action="ListPlaces" asp-route-type="attraction">Достопримечательности</a>
                    <a class="nav__link" asp-controller="Place" asp-action="ListPlaces" asp-route-type="entertainment">Развлечения</a>
                    <a class="nav__link" asp-controller="Place" asp-action="ListPlaces" asp-route-type="business">Бизнес</a>
                    <a class="nav__link" asp-controller="Place" asp-action="ListPlaces" asp-route-type="catering">Общепит</a>
                    <a class="nav__link" asp-controller="Main" asp-action="Map">Карта</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav__link" asp-controller="Account" asp-action="Logout">Выход</a>
                    }
                    else
                    {
                        <a class="nav__link" asp-controller="Account" asp-action="Login">Вход</a>
                    }
                </nav>
                <div class="burger">
                    <div class="burger__inner"></div>
                    <div class="burger__inner"></div>
                    <div class="burger__inner"></div>
                </div>
            </div>
            
        </div>
        
    </header>

    <div class="burger__block">
		<div class="navs">
			<a class="nav__links" asp-controller="Place" asp-action="ListPlaces" asp-route-type="hotel">Отели</a>
			<a class="nav__links" asp-controller="Place" asp-action="ListPlaces" asp-route-type="attraction">Достопримечательности</a>
			<a class="nav__links" asp-controller="Place" asp-action="ListPlaces" asp-route-type="entertainment">Развлечения</a>
			<a class="nav__links" asp-controller="Place" asp-action="ListPlaces" asp-route-type="business">Бизнес</a>
			<a class="nav__links" asp-controller="Place" asp-action="ListPlaces" asp-route-type="catering">Общепит</a>
			<a class="nav__links" asp-controller="Main" asp-action="Map">Карта</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav__links" asp-controller="Account" asp-action="Logout">Выход</a>
            }
            else
            {
                <a class="nav__links" asp-controller="Account" asp-action="Login">Вход</a>
            }
		</div>
    </div>	

    <div class="">
        <main class="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="footer__inner">
                <div class="social">
                    <h1 class="footer__logo">
                        Путеводитель
                    </h1>
                    <div class="social__links">
                        <a href="#" class="social__link">
                            <img src="https://img.icons8.com/fluency/344/facebook.png" alt="" class="footer__icon" />
                        </a>
                        <a href="#" class="social__link">
                            <img src="https://img.icons8.com/fluency/344/instagram-new.png" alt="" class="footer__icon" />
                        </a>
                        <a href="#" class="social__link">
                            <img src="https://img.icons8.com/3d-fluency/344/vk-circled.png" alt="" class="footer__icon" />
                        </a>
                        <a href="#" class="social__link">
                            <img src="https://img.icons8.com/fluency/344/twitter.png" alt="" class="footer__icon" />
                        </a>
                    </div>
                </div>
                <div class="contacts">
                    <h2 class="contacts__text">Наши контакты</h2>
                    <a href="" class="contact__link">
                        <img src="https://img.icons8.com/windows/344/ringer-volume.png" alt="" class="footer__icon" />
                        <div class="contact__info">
                            xxxxxxxxxxx
                        </div>
                    </a>
                    <a href="" class="contact__link">
                        <img src="https://img.icons8.com/ios/100/place-marker--v2.png" alt="" class="footer__icon" />
                        <div class="contact__info">
                           xxxxxxxxxxx
                        </div>
                    </a>
                    <a href="" class="contact__link">
                        <img src="https://img.icons8.com/ios/100/filled-message.png" alt="" class="footer__icon" />
                        <div class="contact__info">
                           xxxxxxxxxxx
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </footer>


    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/burger.js"></script>

	
</body>
</html>
